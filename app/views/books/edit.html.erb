<h2>Editing Book</h2>
<%= form_for(@book, url:"/books/#{@book.id}") do |f| %>
<h4>Title</h4>
<%= f.text_field :title %>
<h4>Body</h4>
<%= f.text_area :body %>

<% if @book.errors.any? %>
  <div id="error_explanation" class="alert alert-danger">
    <ul>
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>
<%= link_to "Show", book_path(@book) %>
<%= link_to "Back", books_path(@book) %>
<%= f.submit 'Update Book' %>
<% end %>